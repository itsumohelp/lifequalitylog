generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model AppLog {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  logLevel  String   @map("log_level") @db.VarChar(10)
  message   String   @db.Text
  context   Json?
  @@map("app_logs")
  @@index([createdAt])
  @@index([logLevel])
}

model Todo {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  title  String   @db.Text
  status Int @db.Integer
  userid String @db.Text
  cost Int @db.Integer
  name String @db.Text
  updateAt DateTime? @map("update_at") @db.Timestamptz
  record Record[]
  @@index([createdAt])
}

model Record {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  todoid  String   @db.Uuid
  status Int @db.Integer
  updateAt DateTime? @map("update_at") @db.Timestamptz
  ended DateTime? @db.Timestamptz
  todo Todo @relation(fields: [todoid], references: [id], onDelete: Cascade)
  @@index([todoid])
  @@index([createdAt])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
  @@map("accounts")
}
 
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("sessions")
}
 
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]
  circleMembers CircleMember[]
  snapshots     Snapshot[]
  circleSnapshots CircleSnapshot[]
  expenses      Expense[]
  @@map("users")
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Circle {
  id          String          @id @default(cuid())
  name        String
  description String?
  walletName  String?
  currency    String          @default("JPY")
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  members     CircleMember[]
  snapshots   Snapshot[]
  circleSnapshots CircleSnapshot[]
  expenses    Expense[]
  monthlySnapshots MonthlySnapshot[]
}

model CircleMember {
  id        String     @id @default(cuid())
  circleId  String
  userId    String
  role      CircleRole
  joinedAt  DateTime   @default(now())
  circle    Circle     @relation(fields: [circleId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  @@unique([circleId, userId])
}

model Snapshot {
  id               String   @id @default(cuid())
  circleId         String
  circle           Circle   @relation(fields: [circleId], references: [id])
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  amount           Int
  memo             String?
  recordedAt       DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  @@index([circleId, recordedAt])
}

enum CircleRole {
  ADMIN
  EDITOR
  VIEWER
}

model CircleSnapshot {
  id        String   @id @default(cuid())
  circleId  String
  circle    Circle   @relation(fields: [circleId], references: [id], onDelete: Cascade)
  userId String
  user   User     @relation(fields: [userId], references: [id])
  amount    Int
  note      String?
  snapshotDate DateTime
  createdAt    DateTime @default(now())
　signature     String
  signatureAlgo String
  signatureAt   DateTime
  isSignatureVerified Boolean @default(true)
  diffFromPrev Int?
  @@index([circleId, createdAt])
  @@index([userId])
}

// 月次集計スナップショット（YYYYMM形式）
model MonthlySnapshot {
  id          String   @id @default(cuid())
  circleId    String
  circle      Circle   @relation(fields: [circleId], references: [id], onDelete: Cascade)
  yearMonth   String   // YYYYMM形式（例: "202601"）
  totalExpense Int     @default(0) // 当月の支出合計
  expenseCount Int     @default(0) // 当月の支出件数
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@unique([circleId, yearMonth])
  @@index([yearMonth])
}

// 支出カテゴリ
enum ExpenseCategory {
  FOOD        // 食費
  DAILY       // 日用品
  TRANSPORT   // 交通費
  ENTERTAINMENT // 娯楽
  UTILITY     // 光熱費
  MEDICAL     // 医療
  OTHER       // その他
}

// 支出記録
model Expense {
  id          String          @id @default(cuid())
  circleId    String
  circle      Circle          @relation(fields: [circleId], references: [id], onDelete: Cascade)
  userId      String
  user        User            @relation(fields: [userId], references: [id])
  amount      Int             // 金額
  description String          // 入力された説明（例：「コンビニで500円」）
  place       String?         // パースした場所
  category    ExpenseCategory @default(OTHER)
  tags        String[]        // 自動抽出されたタグ（例：["コンビニ"]）
  expenseDate DateTime        @default(now()) // 支出日時
  createdAt   DateTime        @default(now())
  @@index([circleId, expenseDate])
  @@index([userId])
}